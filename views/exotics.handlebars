{{#if loggedIn}}
<section>
{{#each exotics as |exotic| }}
  <img class='fancyImage' src="/images/{{exotic.filename}}">
  <div class ='card'>
    <h3>{{exotic.fancy_name}}</h3>
    <p>Age: {{exotic.age}}</p>
    <p>Gender: {{exotic.gender}}</p>
    <p>About: {{exotic.description}}</p>
  </div>
  {{/each}}
</section>
{{else}}
<a href="/login">You must login first to view any available pets!</a>
{{/if}}